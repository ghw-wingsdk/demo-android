<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFEFEF">

    <com.wa.sdk.demo.widget.TitleBar
        android:id="@+id/tb_vk_invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <Button
                android:id="@+id/btn_vk_app_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vk_app_invite"
                android:onClick="onClick"
                android:visibility="gone"/>
            <Button
                android:id="@+id/btn_vk_game_service_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="@string/vk_game_service_invite"/>
            <Button
                android:id="@+id/btn_vk_invite_install_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="@string/vk_check_invite_install_reward"/>
            <Button
                android:id="@+id/btn_vk_invite_event_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="@string/vk_check_invite_event_reward"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>