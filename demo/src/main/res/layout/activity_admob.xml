<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.wa.sdk.demo.widget.TitleBar
        android:id="@+id/tb_admob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout style="@style/demo_linearlayout">

                <Button
                    android:id="@+id/btn_check_interstitial_ad"
                    style="@style/demo_button"
                    android:text="@string/check_interstitial_ad" />

                <Button
                    android:id="@+id/btn_show_interstitial_ad"
                    style="@style/demo_button"
                    android:text="@string/show_interstitial_ad" />


            </LinearLayout>

            <LinearLayout style="@style/demo_linearlayout">

                <Button
                    android:id="@+id/btn_check_app_open_ad"
                    style="@style/demo_button"
                    android:text="@string/check_app_open_ad" />

                <Button
                    android:id="@+id/btn_show_app_open_ad"
                    style="@style/demo_button"
                    android:text="@string/show_app_open_ad" />

            </LinearLayout>

            <LinearLayout style="@style/demo_linearlayout">

                <EditText
                    android:id="@+id/edt_rewarded_ad_name"
                    style="@style/demo_button"
                    android:hint="@string/hint_rewarded_ad_name"
                    android:text="Rewarded_1" />

                <Button
                    android:id="@+id/btn_show_rewarded_ad"
                    style="@style/demo_button"
                    android:text="@string/show_rewarded_ad" />

            </LinearLayout>

            <LinearLayout style="@style/demo_linearlayout">

                <ToggleButton
                    android:id="@+id/btn_enable_app_open_ad"
                    style="@style/demo_button"
                    android:checked="false"
                    android:textOff="@string/disable_app_open_ad"
                    android:textOn="@string/enable_app_open_ad" />

                <ToggleButton
                    android:id="@+id/btn_enable_banner_ad"
                    style="@style/demo_button"
                    android:checked="false"
                    android:textOff="@string/disable_banner_ad"
                    android:textOn="@string/enable_banner_ad" />

            </LinearLayout>

            <LinearLayout style="@style/demo_linearlayout">

                <Button
                    android:id="@+id/btn_check_ump_options"
                    style="@style/demo_button"
                    android:text="@string/check_ump_options" />

                <Button
                    android:id="@+id/btn_show_ump_options"
                    style="@style/demo_button"
                    android:text="@string/show_ump_options" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/container_admob_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
