<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.wa.sdk.demo.widget.TitleBar
        android:id="@+id/tb_rare_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout style="@style/demo_linearlayout">

                <Button
                    android:id="@+id/btn_open_review"
                    style="@style/demo_button"
                    android:text="@string/open_review" />

                <Button
                    android:id="@+id/btn_show_open_url"
                    style="@style/demo_button"
                    android:text="@string/show_open_url" />
            </LinearLayout>

            <LinearLayout style="@style/demo_linearlayout">

                <Button
                    android:id="@+id/btn_privacy"
                    style="@style/demo_button"
                    android:text="@string/privacy_and_cookie_policy"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_game_service"
                    style="@style/demo_button"
                    android:text="@string/game_service" />
            </LinearLayout>

            <LinearLayout style="@style/demo_linearlayout">

                <Button
                    android:id="@+id/btn_account_manager"
                    style="@style/demo_button"
                    android:text="@string/account_manager" />

                <Button
                    android:id="@+id/btn_account_deletion"
                    style="@style/demo_button"
                    android:text="@string/account_deletion" />
            </LinearLayout>

            <LinearLayout style="@style/demo_linearlayout">

                <Button
                    android:id="@+id/btn_user_center"
                    style="@style/demo_button"
                    android:text="@string/user_center" />

                <Button
                    android:id="@+id/btn_show_consent_preferences"
                    style="@style/demo_button"
                    android:text="@string/show_consent_preferences" />
            </LinearLayout>


            <LinearLayout style="@style/demo_linearlayout">

                <Button
                    android:id="@+id/btn_get_account_info"
                    style="@style/demo_button"
                    android:text="@string/get_account_info" />

                <Button
                    style="@style/demo_button"
                    android:text="@string/get_account_info"
                    android:visibility="invisible" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_deprecation_function"
                android:layout_width="match_parent"
                android:layout_height="@dimen/demo_button_height"
                android:layout_gravity="center_horizontal"
                android:onClick="onClick"
                android:text="@string/deprecation_function" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
