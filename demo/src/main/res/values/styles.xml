<resources>

    <!--  调整Demo的Snackbar显示行数  -->
    <integer name="design_snackbar_text_max_lines">10</integer>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:colorBackgroundCacheHint">@null</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!-- Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used. -->
        <!--        <item name="android:windowNoTitle">true</item>-->
        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="demo_button">
        <item name="android:layout_margin">@dimen/demo_button_margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/demo_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="demo_edit" parent="demo_button">
        <item name="hintTextColor">@color/colorGray</item>
        <item name="android:textSize">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="demo_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/demo_linearlayout_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
