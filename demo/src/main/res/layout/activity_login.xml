<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <com.wa.sdk.demo.widget.TitleBar
        android:id="@+id/tb_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/tbtn_login_flow_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textOff="@string/do_not_rebind_account_with_device"
                android:textOn="@string/rebind_account_with_device"
                android:visibility="gone" />

            <LinearLayout
                style="@style/demo_linearlayout"
                android:layout_marginTop="0dp">

                <Button
                    android:id="@+id/btn_fb_login"
                    style="@style/demo_button"
                    android:onClick="onClick"
                    android:text="@string/fb_login" />

                <Button
                    android:id="@+id/btn_gg_login"
                    style="@style/demo_button"
                    android:text="@string/gg_login" />
            </LinearLayout>

            <LinearLayout
                style="@style/demo_linearlayout"
                android:layout_marginTop="0dp">

                <Button
                    android:id="@+id/btn_anonymous_login"
                    style="@style/demo_button"
                    android:text="@string/anonymous_login" />

                <Button
                    android:id="@+id/btn_winga_login"
                    style="@style/demo_button"
                    android:text="@string/winga_login" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                style="@style/demo_linearlayout"
                android:layout_marginTop="0dp">

                <Button
                    android:id="@+id/btn_ghg_integration_login"
                    style="@style/demo_button"
                    android:text="@string/ghg_integration_login" />

                <Button
                    android:id="@+id/btn_r2_integration_login"
                    style="@style/demo_button"
                    android:text="@string/r2_integration_login" />

            </LinearLayout>

            <LinearLayout style="@style/demo_linearlayout">

                <Button
                    android:id="@+id/btn_login_form"
                    style="@style/demo_button"
                    android:text="@string/login_form" />

            </LinearLayout>


            <LinearLayout
                style="@style/demo_linearlayout"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_app_login"
                    style="@style/demo_button"
                    android:text="@string/app_login" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <!--        nowgg ç”¨            -->

            </LinearLayout>

            <LinearLayout
                style="@style/demo_linearlayout"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_vk_login"
                    style="@style/demo_button"
                    android:text="@string/vk_login" />

                <Button
                    android:id="@+id/btn_twitter_login"
                    style="@style/demo_button"
                    android:text="@string/twitter_login" />
            </LinearLayout>

            <LinearLayout
                style="@style/demo_linearlayout"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_instagram_login"
                    style="@style/demo_button"
                    android:text="@string/instagram_login" />

                <Button
                    android:id="@+id/btn_huawei_hms_login"
                    style="@style/demo_button"
                    android:text="@string/huaweihms_login" />
            </LinearLayout>

            <LinearLayout
                style="@style/demo_linearlayout"
                android:layout_marginTop="0dp">

                <Button
                    android:id="@+id/btn_logout"
                    style="@style/demo_button"
                    android:text="@string/logout" />

            </LinearLayout>

            <LinearLayout style="@style/demo_linearlayout">

                <Button
                    android:id="@+id/btn_clear_login_cache"
                    style="@style/demo_button"
                    android:text="@string/clean_login_cache" />

                <ToggleButton
                    android:id="@+id/tbtn_enable_login_cache"
                    style="@style/demo_button"
                    android:checked="false"
                    android:textOff="@string/disable_login_cache"
                    android:textOn="@string/enable_login_cache" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>